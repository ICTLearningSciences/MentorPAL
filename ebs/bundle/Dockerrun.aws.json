{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "mentor-api-checkpoint",
      "host": {
        "sourcePath": "/var/app/current/mentor-api/checkpoint"
      }
    },
    {
      "name": "mentor-api-mentors",
      "host": {
        "sourcePath": "/var/app/current/mentor-api/mentors"
      }
    },
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "web-app",
      "image": "uscictdocker/mentor-client:1.2.5-alpha.2",
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ],
      "environment": [
        {
          "name": "MENTOR_VIDEO_URL",
          "value": "https://video.mentorpal.org/videos"
        }
      ],
      "essential": true,
      "memory": 1024,
      "links": ["mentor-api"],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-web-app",
          "containerPath": "/var/log/node"
        }
      ]
    },
    {
      "name": "mentor-api",
      "image": "uscictdocker/mentor-api:1.0.0",
      "essential": true,
      "memory": 6144,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "mentor-api-checkpoint",
          "containerPath": "/app/checkpoint",
          "readOnly": true
        },
        {
          "sourceVolume": "mentor-api-mentors",
          "containerPath": "/app/mentors",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-mentor-api",
          "containerPath": "/var/log/flask"
        }
      ]
    },
    {
      "name": "lrs",
      "image": "uscictdocker/xapi-lrs-proxy:1.1.0",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 3001,
          "containerPort": 3001
        }
      ],
      "environment": [
        {
          "name": "PORT",
          "value": 3001
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-lrs",
          "containerPath": "/var/log/node"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "nginx:1.15.6",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["web-app", "mentor-api", "lrs"],
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
